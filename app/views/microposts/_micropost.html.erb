<li>
	<p class="content"><%= micropost.content %></p>
	<small class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</small>
	<% if current_user?(micropost.user) %>
	<%= link_to "Delete", micropost, method: :delete, data: {confirm: "Are you sure?"}, title: micropost.content %>
	<% end %>
</li>